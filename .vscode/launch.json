{
	// Use IntelliSense to learn about possible attributes.
	// Hover to view descriptions of existing attributes.
	// For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
	"version": "0.2.0",
	"configurations": [
		{
			"type": "node",
			"request": "launch",
			"name": "Debug Emcee",
			"skipFiles": ["<node_internals>/**"],
			"program": "${workspaceFolder}/dist",
			"runtimeArgs": ["--enable-source-maps", "--unhandled-rejections=strict"],
			"preLaunchTask": "npm: build",
			"outFiles": ["${workspaceFolder}/dist/**/*.js"],
			"outputCapture": "std",
			"internalConsoleOptions":"openOnSessionStart",
			"env": {
				"DEBUG_COLORS": "1"
			}
		},
		{
			"type": "node",
			"request": "launch",
			"name": "Debug Emcee (integrated terminal)",
			"skipFiles": ["<node_internals>/**"],
			"program": "${workspaceFolder}/dist",
			"args": ["--enable-source-maps"],
			"preLaunchTask": "npm: build",
			"outFiles": ["${workspaceFolder}/dist/**/*.js"],
			"console": "integratedTerminal"
		},
		{
			"type": "node",
			"request": "launch",
			"name": "Mocha All",
			"program": "${workspaceFolder}/node_modules/mocha/bin/_mocha",
			"args": ["--config", "test/.mocharc.yml", "--timeout", "0", "${workspaceFolder}/test/*.ts", "${workspaceFolder}/test/**/*.unit.ts"],
			"skipFiles": ["<node_internals>/**/*.js"]
		},
		{
			"type": "node",
			"request": "launch",
			"name": "Mocha Current File",
			"program": "${workspaceFolder}/node_modules/mocha/bin/_mocha",
			"args": ["--config", "test/.mocharc.yml", "--timeout", "0", "${file}"],
			"skipFiles": ["<node_internals>/**/*.js"]
		}
	]
}
